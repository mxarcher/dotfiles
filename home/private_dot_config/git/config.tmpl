[user]
	name = {{ .name }}
	email = {{ .email }}
	signingkey = {{ .signingkey }}

[init]
	defaultBranch = main
[https]
	proxy = socks5://{{ .proxy.socks5 }}
[http]
	proxy = socks5://{{ .proxy.socks5 }}
[commit]
	gpgsign = true
[alias]
	cc = cz commit
	ck = cz check
	cl = cz changelog
	cv = cz version
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[core]
	autocrlf = input
